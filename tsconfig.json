{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "lib": [ "ESNext", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

    },

    "include": [
        "./src"
    ]
}